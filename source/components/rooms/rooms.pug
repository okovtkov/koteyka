include ../booking-button/booking-button.pug
include ../slider/slider.pug

mixin rooms(title)
    <div class="rooms positioner" id="rooms">
        <h2 class="rooms__title_main">#{title}</h2>
        +slider("rooms")
            <ul class="rooms__list slider__list">
                <li class="rooms__room">
                    <img src="/img/room-1.jpg" alt="Эконом плюс" class="rooms__img">
                    <div class="rooms__info">
                        <h3 class="rooms__title">Эконом плюс</h3>
                        <ul class="rooms__ul">
                            <li class="rooms__item">
                                | Площадь - 0,90 м2
                            </li>
                            <li class="rooms__item">
                                | Размеры (ШхГхВ) - 90х100х180 см
                            </li>
                            <li class="rooms__item">
                                | Цена за сутки: 200р.
                            </li>
                        </ul>
                        +booking-button("primary rooms__booking-button")
                    </div>
                </li>
                <li class="rooms__room">
                    <img src="/img/room-2.jpg" alt="Люкс" class="rooms__img">
                    <div class="rooms__info">
                        <h3 class="rooms__title">Люкс</h3>
                        <ul class="rooms__ul">
                            <li class="rooms__item">
                                | Площадь - 1,5 м2
                            </li>
                            <li class="rooms__item">
                                | Размеры (ШхГхВ) - 90х60х90 см
                            </li>
                            <li class="rooms__item">
                                | Цена за сутки: 100р.
                            </li>
                        </ul>
                        +booking-button("primary rooms__booking-button")
                    </div>
                </li>
                <li class="rooms__room">
                    <img src="/img/room-3.jpg" alt="Президентский" class="rooms__img">
                    <div class="rooms__info">
                        <h3 class="rooms__title">Президентский</h3>
                        <ul class="rooms__ul">
                            <li class="rooms__item">
                                | Площадь - 2,28 м2
                            </li>
                            <li class="rooms__item">
                                | Размеры (ШхГхВ) - 228х228х228 см
                            </li>
                            <li class="rooms__item">
                                | Цена за сутки: 200$.
                            </li>
                        </ul>
                        +booking-button("primary rooms__booking-button")
                    </div>
                </li>
            </ul>
    </div>