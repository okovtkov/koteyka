mixin rooms(title)
    <div class="rooms" id="rooms">
        <div class="positioner">
            <button class="left">&lt;</button>
            <button class="right">&gt;</button>
            <input type="radio" name="slider-rooms" id="btn-1" checked>
            <input type="radio" name="slider-rooms" id="btn-2">
            <input type="radio" name="slider-rooms" id="btn-3">
            <h2>#{title}</h2>
            <div class="slide">
                <div class="room">
                    <img src="/img/room-1.jpg" alt="Эконом плюс">
                    <div class="info">
                            <h3>Эконом плюс</h3>
                            <ul>
                                <li>
                                   | Площадь - 0,90 м2
                                </li>
                                <li>
                                   | Размеры (ШхГхВ) - 90х100х180 см
                                </li>
                                <li>
                                   | Цена за сутки: 200р.
                                </li>
                            </ul>
                            <button>
                               | Забронировать
                            </button>
                    </div>
                </div>
                <div class="room">
                    <img src="/img/room-2.jpg" alt="Номер люкс">
                    <div class="info">
                        <h3>Люкс</h3>
                        <ul>
                            <li>
                               | Площадь - 1,5 м2
                            </li>
                            <li>
                               | Размеры (ШхГхВ) - 90х60х90 см
                            </li>
                            <li>
                               | Цена за сутки: 100р.
                            </li>
                        </ul>
                        <button>
                           | Забронировать
                        </button>
                    </div>
                </div>
                <div class="room">
                    <img src="/img/room-3.jpg" alt="Президентский номер">
                    <div class="info">
                        <h3>Президентский</h3>
                        <ul>
                            <li>
                               | Площадь - 2,28 м2
                            </li>
                            <li>
                               | Размеры (ШхГхВ) - 228х228х228 см
                            </li>
                            <li>
                               | Цена за сутки: 200$.
                            </li>
                            <button>
                               | Забронировать
                            </button>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="radio-button">
                <label for="btn-1"></label>
                <label for="btn-2"></label>
                <label for="btn-3"></label>
            </div>
        </div>
    </div>