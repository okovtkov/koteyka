include ../booking-button/booking-button.pug

mixin rooms(title)
    <div class="rooms" id="rooms">
        <div class="positioner rooms__positioner">
            <button class="rooms__button_prev">&lt;</button>
            <button class="rooms__button_next">&gt;</button>
            <input type="radio" class="rooms__slider" name="slider-rooms" id="btn-1" checked>
            <input type="radio" class="rooms__slider" name="slider-rooms" id="btn-2">
            <input type="radio" class="rooms__slider" name="slider-rooms" id="btn-3">
            <h2 class="rooms__title_main">#{title}</h2>
            <div class="slide">
                <div class="slide__room">
                    <img src="/img/room-1.jpg" alt="Эконом плюс" class="slide__img">
                    <div class="slide__info">
                        <h3 class="slide__title">Эконом плюс</h3>
                        <ul class="slide__ul">
                            <li class="slide__list">
                                | Площадь - 0,90 м2
                            </li>
                            <li class="slide__list">
                                | Размеры (ШхГхВ) - 90х100х180 см
                            </li>
                            <li class="slide__list">
                                | Цена за сутки: 200р.
                            </li>
                        </ul>
                        +booking-button("primary slide__booking-button")
                    </div>
                </div>
                <div class="slide__room">
                    <img src="/img/room-2.jpg" alt="Номер люкс" class="slide__img">
                    <div class="slide__info">
                        <h3 class="slide__title">Люкс</h3>
                        <ul class="slide__ul">
                            <li class="slide__list">
                               | Площадь - 1,5 м2
                            </li>
                            <li class="slide__list">
                               | Размеры (ШхГхВ) - 90х60х90 см
                            </li>
                            <li class="slide__list">
                               | Цена за сутки: 100р.
                            </li>
                        </ul>
                        +booking-button("primary slide__booking-button")
                    </div>
                </div>
                <div class="slide__room">
                    <img src="/img/room-3.jpg" alt="Президентский номер" class="slide__img">
                    <div class="slide__info">
                        <h3 class="slide__title">Президентский</h3>
                        <ul class="slide__ul">
                            <li class="slide__list">
                               | Площадь - 2,28 м2
                            </li>
                            <li class="slide__list">
                               | Размеры (ШхГхВ) - 228х228х228 см
                            </li>
                            <li class="slide__list">
                               | Цена за сутки: 200$.
                            </li>
                            +booking-button("primary slide__booking-button")
                        </ul>
                    </div>
                </div>
            </div>
            <div class="rooms__radio-button">
                <label for="btn-1" class="rooms__label rooms__label_btn-1"></label>
                <label for="btn-2" class="rooms__label rooms__label_btn-2"></label>
                <label for="btn-3" class="rooms__label rooms__label_btn-3"></label>
            </div>
        </div>
    </div>